{
  "moduleFileExtensions": ["js", "json", "ts", "tsx"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s(|x)$": "ts-jest"
  },

  "globalSetup": "./setup/global-setup.ts",

  "moduleNameMapper": {
    "^@/test/(.*)$": "<rootDir>/../test/$1",
    "^@/(.*)$": "<rootDir>/../src/$1"
  }
}
