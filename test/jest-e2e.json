{
  "preset": "ts-jest/presets/default-esm",
  "moduleFileExtensions": ["js", "json", "ts", "tsx"],
  "rootDir": ".",
  "testEnvironment": "node",
  "extensionsToTreatAsEsm": [".ts"],
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s(|x)$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/test/(.*)$": "<rootDir>/../test/$1",
    "^@/(.*)$": "<rootDir>/../src/$1"
  },

  "globalSetup": "./setup/global-setup.ts"
}
